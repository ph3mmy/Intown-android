<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="1dp" android:color="#fff" />
                    <gradient android:angle="45" android:centerColor="#fff" android:endColor="#fff" android:startColor="#fff" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:left="14dp" android:right="1dp">
                <rotate android:fromDegrees="45" android:pivotX="-35%" android:pivotY="-5%">
                    <shape android:shape="line">
                        <stroke android:width="4dp" android:color="#000000" />
                    </shape>
                </rotate>
            </item>
            <item android:top="8dp" android:bottom="8dp">
                <rotate android:fromDegrees="-45" android:pivotX="57%" android:pivotY="0%">
                    <shape android:shape="line">
                        <stroke android:width="4dp" android:color="#000000" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
